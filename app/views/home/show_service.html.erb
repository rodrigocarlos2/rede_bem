<div class="row">
	
	<div class="col-sm-6 col-sm-offset-3">
	<div class="panel" style="box-shadow:9px 7px 5px rgba(50, 50, 50, 0.77); color: #000;">
  <div class="panel-heading">
    <h3 class="panel-title"><i class="fa fa-search"></i>Buscar profissionais</h3>
  </div>
  <div class="panel-body">
  <%= search_form_for @q, class: "form-inline", url: busca_path, html: { method: :post } do |f| %>
    <div class="form-group">
		<label>Categoria</label>
        <%= f.select :category_id_eq, options_from_collection_for_select(@categories, "id", "name"), {include_blank: true}, {class: 'form-control'}%>
	</div>
	<div class="form-group ">
		<label>Nome</label>
		<%= f.search_field :name_cont %>
	</div>
	
	
		<%= f.submit class: "btn btn-info", value: "Pesquisar" %>
	<% end %>
	</div>
  </div>
</div>
</div>
<div class="container">

  <h2> <%= @service.description %> </h2>

  <div class="row">

            <% @images.each do |image| %>

              <div class="col-sm-3 portfolio-item">
                
                <%= image_tag(image.avatar.pic.url) if image.avatar? %>

              </div>

            <% end %>               
  </div>
  <h3><span class="glyphicon glyphicon-comment"></span> Comentários</h3>
            <table class="table">
            <thead>
              <tr>
                <th>Usuário</th>
                <th>Comentário</th>
                <th>Data</th>
              </tr>
            </thead>
            <% @comments.each do |c|%>  
              <tbody>
                <tr>
                  <th><%=@service.user_client.name%></th>
                  <th><%= c.description%></th>
                  <th><%= c.created_at.strftime("%d/%m/%Y, %H:%M")%></th>
                </tr>
              </tbody>
            <% end %>
            
            </table>
</div>
