<div class="row">
	
	<div class="col-sm-6 col-sm-offset-3">
	<div class="panel" style="box-shadow:9px 7px 5px rgba(50, 50, 50, 0.77); color: #000;">
  <div class="panel-heading">
    <h3 class="panel-title"><i class="fa fa-search"></i>Buscar profissionais</h3>
  </div>
  <div class="panel-body">
  <%= search_form_for @q, class: "form-inline", url: busca_path, html: { method: :post } do |f| %>
    <div class="form-group">
		<label>Categoria</label>
        <%= f.select :category_id_eq, options_from_collection_for_select(@categories, "id", "name"), {include_blank: true}, {class: 'form-control'}%>
	</div>
	<div class="form-group ">
		<label>Nome</label>
		<%= f.search_field :name_cont %>
	</div>
	
	
		<%= f.submit class: "btn btn-info", value: "Pesquisar" %>
	<% end %>
	</div>
  </div>
</div>
</div>
<div class="container">
  <div class="row">

            <div class="col-lg-12">
                <h2 class="page-header"><%= @service.description%></h2>
            </div>
            <div class="col-sm-4">
                <a href="portfolio-item.html">
                    <img class="img-responsive img-portfolio img-hover" style="margin:0.2em;" src="http://placehold.it/700x450" alt="">
                </a>
            </div>                
  </div>
  <h3><span class="glyphicon glyphicon-comment"></span> Coment√°rios</h3>
            <% @comments.each do |c|%>  
              <div class="row">
                        <div class="col-sm-8">
                            <span class="glyphicon glyphicon-star"></span>
                            
                            <%=@service.user_client.name%>
                            <span class="pull-right"><%= c.created_at.strftime("%d/%m/%Y, %H:%M")%></span>
                            <p><%= c.description%></p>
                        </div>
            </div>
            <% end %>
</div>
