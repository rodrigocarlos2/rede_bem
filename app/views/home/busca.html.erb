<div class="row">
	
	<div class="col-sm-6 col-sm-offset-3">
	<div class="panel" style="box-shadow:9px 7px 5px rgba(50, 50, 50, 0.77); color: #000;">
  <div class="panel-heading">
    <h3 class="panel-title"><i class="fa fa-search"></i>Buscar profissionais</h3>
  </div>
  <div class="panel-body">
  <%= search_form_for @q, class: "form-inline", url: busca_path, html: { method: :post } do |f| %>
    <div class="form-group">
		<label>Categoria</label>
        <%= f.select :category_id_eq, options_from_collection_for_select(@categories, "id", "name"), {include_blank: true}, {class: 'form-control'}%>
	</div>
	<div class="form-group ">
		<label>Nome</label>
		<%= f.search_field :name_cont %>
	</div>
	
	
		<%= f.submit class: "btn btn-info", value: "Pesquisar" %>
	<% end %>
	</div>
  </div>
</div>
</div>
<div class="container">
	
	<div class="row text-center">
		<% @users.each do |u| %>
        
            <div class="col-md-3 col-sm-6 hero-feature">
                <div class="thumbnail">
                    <img src="http://placehold.it/800x500" alt="">
                    <div class="caption">
                        <h3><%= u.name%></h3>
                        <p>Categoria: <%= u.category.name%></p>
                        <p>
                            <%= link_to "Mais informações", "#", class: "btn btn-primary"%>
                        </p>
                    </div>
                </div>
            </div>
		
		<% end %>

        </div>
        <!-- /.row -->		
	
</div>
